@model IEnumerable<FitnessApp.Models.Egitmen>

@{
    ViewData["Title"] = "Eğitmenler";
}

<h1>Eğitmen Listesi</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Eğitmen Ekle</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.AdSoyad)</th>
            <th>@Html.DisplayNameFor(model => model.UzmanlikAlani)</th>
            <th>@Html.DisplayNameFor(model => model.CalismaSaatleri)</th>
            <th>@Html.DisplayNameFor(model => model.SalonHizmeti)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.AdSoyad)</td>
                <td>@Html.DisplayFor(modelItem => item.UzmanlikAlani)</td>
                <td>@Html.DisplayFor(modelItem => item.CalismaSaatleri)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalonHizmeti.Ad)
                </td>
                <td>
                    <a asp-controller="Randevular" asp-action="RandevuAl" asp-route-egitmenId="@item.Id" class="btn btn-success btn-sm">
                         Randevu Al
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>