@{
    ViewData["Title"] = "AI Destekli Antrenör";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white text-center">
                    <h3> AI Destekli Kişisel Antrenör</h3>
                    <p class="mb-0">Bilgilerinizi girin, Yapay Zeka size özel program hazırlasın.</p>
                </div>
                <div class="card-body p-4">

                    <form asp-action="OneriAl" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Boyunuz (cm)</label>
                                <input type="number" name="boy" class="form-control" placeholder="Örn: 175" required min="100" max="250">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Kilonuz (kg)</label>
                                <input type="number" name="kilo" class="form-control" placeholder="Örn: 70" required min="30" max="200">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Cinsiyet</label>
                                <select name="cinsiyet" class="form-select">
                                    <option value="Erkek">Erkek</option>
                                    <option value="Kadin">Kadın</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Hedefiniz Nedir?</label>
                                <select name="hedef" class="form-select">
                                    <option value="Kilo Verme">Kilo Vermek İstiyorum</option>
                                    <option value="Kas Yapma">Kas Yapmak / Hacim Kazanmak</option>
                                    <option value="Saglik">Formumu Korumak / Sağlıklı Yaşam</option>
                                </select>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                 Yapay Zekaya Sor
                            </button>
                        </div>
                    </form>

                    @if (ViewBag.Sonuc != null)
                    {
                        <div class="alert alert-success mt-4 fade show" role="alert">
                            <h4 class="alert-heading"><i class="bi bi-robot"></i> AI Antrenörün Tavsiyesi:</h4>
                            <hr>
                            <p class="mb-0" style="white-space: pre-line;">@ViewBag.Sonuc</p>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>